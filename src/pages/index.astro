---
import Layout from '../layouts/Layout.astro';
import ButtonSubmit from '../components/ButtomSubmit.svelte';
---

<Layout>
    <main class="container max-w-lg m-auto">
        <header class="py-4">
            <h1 class="text-3xl font-bold">Fix my english! </h1>
        </header>
        <label class="text-gray-700">
			<textarea id="result" class="flex-1 w-full px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border-2
			border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600
			focus:border-transparent" rows="5" cols="40" placeholder="Put your english to fix"></textarea>
        </label>
        <ButtonSubmit name="Ypse" client:only/>
    </main>
</Layout>
